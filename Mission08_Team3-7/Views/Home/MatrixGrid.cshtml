@model IEnumerable<Mission08_Team3_7.Models.Task>
@using System.Linq

@{
    ViewData["Title"] = "Covey's Time Management Matrix";

    // Handle null model
    var tasks = Model ?? Enumerable.Empty<Mission08_Team3_7.Models.Task>();
}

<div class="container">
    <div class="row">
        <!-- Quadrant I: Important/Urgent -->
        <div class="col-md-6 mb-4">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h5>Quadrant I: Important / Urgent</h5>
                </div>
                <div class="card-body">
                    @{
                        var q1Tasks = tasks.Where(t => t.Quadrant == 1).ToList();
                    }
                    @foreach (var task in q1Tasks)
                    {
                        <div class="task-item mb-2 p-2 border-bottom">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <strong>@task.TaskName</strong>
                                    @if (!string.IsNullOrEmpty(task.DueDate))
                                    {
                                        <span class="text-muted ml-2">(Due: @task.DueDate)</span>
                                    }
                                    <br>
                                    <span class="badge badge-primary">@task.Category?.CategoryName</span>
                                </div>
                                <div>
                                    <a asp-action="Edit" asp-route-id="@task.TaskId" class="btn btn-sm btn-outline-primary">Edit</a>
                                    <a asp-action="Delete" asp-route-id="@task.TaskId" class="btn btn-sm btn-outline-danger">Delete</a>
                                    <form asp-action="MarkCompleted" method="post" class="d-inline">
                                        <input type="hidden" name="id" value="@task.TaskId" />
                                        <button type="submit" class="btn btn-sm btn-success">✓</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    }
                    @if (!q1Tasks.Any())
                    {
                        <p class="text-muted">No tasks in this quadrant</p>
                    }
                </div>
            </div>
        </div>

        <!-- Quadrant II: Important/Not Urgent -->
